{
  "private": true,
  "name": "@betahaus-sofia/facility",
  "version": "1.9.0",
  "license": "MIT",
  "scripts": {
    "build": "webpack -p --display-modules",
    "start": "webpack-dev-server --port 3000",
    "test": "jest",
    "jest": "jest --watch",
    "deploy": "npm test && npm run build && firebase deploy"
  },
  "dependencies": {
    "@types/es6-promise": "0.0.32",
    "@types/mithril": "1.1.1",
    "bootstrap-sass": "3.3.7",
    "compote": "0.14.0",
    "mithril": "1.1.1",
    "redux": "3.6.0"
  },
  "devDependencies": {
    "@types/jest": "19.2.2",
    "autoprefixer": "7.0.0",
    "css-loader": "0.28.0",
    "file-loader": "0.11.1",
    "firebase-tools": "3.6.1",
    "html-webpack-plugin": "2.28.0",
    "jest": "19.0.2",
    "node-sass": "4.5.2",
    "postcss-loader": "1.3.3",
    "sass-loader": "6.0.3",
    "style-loader": "0.16.1",
    "ts-jest": "19.0.13",
    "ts-loader": "2.0.3",
    "typescript": "2.2.2",
    "var": "0.2.0",
    "webpack": "2.4.1",
    "webpack-dev-server": "2.4.5"
  },
  "greenkeeper": {
    "ignore": [
      "compote"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js}",
      "!src/**/*.test.{ts,tsx,js}",
      "!src/**/*.d.ts",
      "!node_modules/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(s?css|less)$": "<rootDir>/src/jest/style.js"
    },
    "testRegex": "(/__tests__/.*|\\.test)\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
