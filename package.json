{
  "private": true,
  "name": "@betahaus-sofia/facility",
  "version": "1.2.0",
  "license": "MIT",
  "scripts": {
    "build": "webpack -p",
    "deploy": "npm test && npm run build && firebase deploy",
    "start": "webpack-dev-server --port 3000",
    "test": "jest",
    "jest": "jest --watch"
  },
  "dependencies": {
    "bootstrap-sass": "3.3.7",
    "compote": "0.9.1",
    "lodash": "4.17.4",
    "mithril": "1.0.1",
    "redux": "3.6.0",
    "timeago.js": "2.0.5"
  },
  "devDependencies": {
    "@types/jest": "19.2.2",
    "@types/lodash": "4.14.55",
    "css-loader": "0.27.3",
    "file-loader": "0.10.1",
    "firebase-tools": "3.5.0",
    "html-webpack-plugin": "2.28.0",
    "jest": "19.0.2",
    "node-sass": "4.5.0",
    "sass-loader": "6.0.3",
    "style-loader": "0.14.1",
    "ts-jest": "19.0.1",
    "ts-loader": "2.0.1",
    "typescript": "2.2.1",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.4.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js}",
      "!src/**/*.test.{ts,tsx,js}",
      "!src/**/*.d.ts",
      "!node_modules/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(s?css|less)$": "<rootDir>/src/jest/style.js"
    },
    "testRegex": "(/__tests__/.*|\\.test)\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
