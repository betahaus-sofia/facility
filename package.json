{
  "private": true,
  "name": "@betahaus-sofia/facility",
  "version": "1.11.0",
  "license": "MIT",
  "scripts": {
    "build": "webpack -p --env.production --display-modules",
    "profile:build": "webpack --profile --json > ./build/profile.json",
    "profile:open": "webpack-bundle-analyzer ./build/profile.json",
    "start": "webpack-dev-server --port 3000 --history-api-fallback",
    "test": "jest",
    "jest": "jest --watch",
    "deploy": "npm test && npm run build && firebase deploy"
  },
  "dependencies": {
    "@types/mithril": "1.1.8",
    "bootstrap-sass": "3.3.7",
    "compote": "3.3.2",
    "firebase": "4.4.0",
    "mithril": "1.1.4",
    "redux": "3.7.2"
  },
  "devDependencies": {
    "@types/jest": "20.0.8",
    "autoprefixer": "7.1.4",
    "clean-webpack-plugin": "0.1.17",
    "css-loader": "0.28.7",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "0.11.2",
    "firebase-tools": "3.12.0",
    "html-webpack-plugin": "2.30.1",
    "jest": "20.0.4",
    "node-sass": "4.5.3",
    "postcss-loader": "1.3.3",
    "sass-loader": "6.0.6",
    "style-loader": "0.18.2",
    "ts-jest": "20.0.14",
    "ts-loader": "2.3.7",
    "typescript": "2.5.3",
    "var": "0.3.1",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.9.1",
    "webpack-null-plugin": "0.0.2",
    "workbox-webpack-plugin": "2.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js}",
      "!src/**/*.test.{ts,tsx,js}",
      "!src/**/*.d.ts",
      "!node_modules/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(s?css|less)$": "<rootDir>/node_modules/compote/components/jest/style.js"
    },
    "testRegex": "(/__tests__/.*|\\.test)\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
