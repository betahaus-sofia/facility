{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": false,

    "baseUrl": "src",
    "lib": ["dom", "es2015.promise", "es2015.collection", "es5"],
    "module": "commonjs",
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
