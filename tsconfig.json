{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": false,
    "target": "ES5"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
